{
  "name": "daily-gateway",
  "description": "Daily API gateway and authentication service",
  "main": "index.js",
  "private": true,
  "engines": {
    "node": "^14.13.0"
  },
  "scripts": {
    "mocha": "NODE_ENV=test mocha",
    "lint": "eslint . --ext .js",
    "test": "yarn run lint && BLUESNAP_IP='123.1.1.1,123.2.2.2' yarn run mocha",
    "build": "babel . -d build --source-maps --ignore build,node_modules,test && cp package.json yarn.lock ./build",
    "babel-node": "babel-node",
    "watch": "nodemon --exec yarn run babel-node -- $npm_package_main | pino-pretty",
    "start": "node $npm_package_main | pino-stackdriver"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/elegantmonkeys/daily-gateway.git"
  },
  "bugs": {
    "url": "https://github.com/elegantmonkeys/daily-gateway/issues"
  },
  "homepage": "https://github.com/elegantmonkeys/daily-gateway#readme",
  "mocha": {
    "require": [
      "@babel/register",
      "test/setup"
    ],
    "ui": "bdd",
    "recursive": [
      "test/integration"
    ],
    "timeout": 5000,
    "exit": true
  },
  "dependencies": {
    "@binxhealth/pino-stackdriver": "^3.0.0",
    "@google-cloud/profiler": "^4.1.0",
    "@google-cloud/pubsub": "^2.7.0",
    "@google-cloud/trace-agent": "^5.1.1",
    "@koa/cors": "3",
    "@sendgrid/client": "^7.4.0",
    "@sendgrid/mail": "^7.4.0",
    "@slack/client": "^5.0.2",
    "busboy": "^0.3.1",
    "cloudinary": "^1.23.0",
    "jsonwebtoken": "^8.3.0",
    "knex": "^0.21.12",
    "koa": "^2.13.0",
    "koa-bodyparser": "^4.2.0",
    "koa-context-validator": "^0.4.1",
    "koa-jwt": "^4.0.0",
    "koa-pino-logger": "^3.0.0",
    "koa-proxies": "^0.11.0",
    "koa-router": "^10.0.0",
    "koa-useragent": "^4.0.0",
    "lodash": "^4.17.19",
    "mysql": "^2.15.0",
    "pino": "^6.7.0",
    "request": "^2.85.0",
    "request-promise-native": "^1.0.9",
    "shortid": "^2.2.16"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.8",
    "@babel/core": "^7.12.9",
    "@babel/node": "^7.12.6",
    "@babel/preset-env": "^7.12.10",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "eslint": "^7.15.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-chai-friendly": "^0.6.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-mocha": "^8.0.0",
    "knex-cleaner": "^1.3.1",
    "mocha": "^8.2.1",
    "mocha-junit-reporter": "^2.0.0",
    "nock": "^13.0.5",
    "nodemon": "^2.0.6",
    "pino-pretty": "^4.3.0",
    "sinon": "^9.2.1",
    "sinon-chai": "^3.5.0",
    "supertest": "^6.0.1"
  }
}
